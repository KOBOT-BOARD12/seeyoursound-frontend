<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backButton"
            android:layout_width="60dp"

            android:layout_height="60dp"

            android:layout_gravity="left"
            android:background="@drawable/back"
            android:fontFamily="@font/apple"
            android:paddingStart="16dp"
            android:textColor="#000000"

            android:textSize="20sp" />

        <Space
            android:layout_width="180dp"
            android:layout_height="1dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/noticeButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/notice_1"
            android:fontFamily="@font/apple"
            android:textColor="#000000"

            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reservationButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/reser"
            android:fontFamily="@font/apple"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"

            android:adjustViewBounds="true"

            android:src="@drawable/eyes" />

        <Button
            android:id="@+id/recordingButton"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonshape"
            android:drawableLeft="@drawable/eye3"

            android:fontFamily="@font/apple"
            android:paddingStart="16dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />


    </FrameLayout>




    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="#000000"/>

    <TextView
        android:id="@+id/statusTextView"
        android:text="연결상태 ... "
        android:fontFamily="@font/apple"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="16dp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        />


</LinearLayout>
