<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    >








    <Button
        android:id="@+id/reservationButton"
        android:fontFamily="@font/apple"
        android:drawableLeft="@drawable/eye3"
        android:paddingStart="16dp"
        android:text="Option"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_gravity="end"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/eye_small"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />
        <Button
            android:id="@+id/recordingButton"
            android:fontFamily="@font/apple"
            android:drawableLeft="@drawable/eye3"
            android:text="Start Seeing"
            android:textColor="#FFFFFF"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:paddingStart="16dp"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            />



    </FrameLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/statusTextView"
        android:text="연결상태 ... "
        android:fontFamily="@font/apple"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="16dp"
        android:layout_width="270dp"
        android:layout_height="60dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/apple"
        android:text="SeeYourSound"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        />
</LinearLayout>
